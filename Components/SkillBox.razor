<div class="skill-card">
    <img src="@Image" width="@Width" height="@Height"/>
    <p class="mt-3">@SkillName</p>
</div>

@code {
    [Parameter]
    public string? SkillName { get; set; }

    [Parameter]
    public string? Image { get; set; }
    [Parameter]
    public string? Width { get; set; }
    [Parameter]
    public string? Height { get; set; }
}